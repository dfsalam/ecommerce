<%= link_to admin_categories_path, class: "block px-4 py-2 hover:rounded hover:bg-gray-700 w-32" do %>
  <%= icon('fa-solid', 'backward', class:'mr-2') %><span class="hidden md:inline-block">Back</span>
<% end %>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_category %>

    <%= link_to "Edit this category", edit_admin_category_path(@admin_category), class: "mt-2 rounded-lg py-3 px-5 bg-green-600 text-white inline-block font-medium" %>
    <div class="inline-block">
      <%= button_to "Destroy this category", admin_category_path(@admin_category), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-600 text-white font-medium" %>
    </div>
    
  </div>
</div>
