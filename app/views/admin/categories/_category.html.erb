<div id="<%= dom_id category %>">
  <p class="my-5 max-w-14"> 
    <%= category.image.present? ? image_tag(category.image): image_tag("https://via.placeholder.com/50") %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= category.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this category", [:admin, category], class: "rounded-lg py-3 px-5 bg-emerald-800 text-white inline-block font-medium" %>
    <%= link_to "Edit this category", edit_admin_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-green-600 text-white inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
